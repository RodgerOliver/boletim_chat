<% include partials/header %>

<div class="container mt-5">
	<h1 class="text-center mb-4">Registrar</h1>
	<div class="form-auth">
		<form action="/register" method="POST">
			<div class="form-group">
				<label for="username">Nome:</label>
				<input id="username" class="form-control" type="text" name="username" autofocus required>
			</div>
			<div class="form-group">
				<label for="surname">Sobrenome:</label>
				<input id="surname" class="form-control" type="text" name="surname" required>
			</div>
			<div class="form-group">
				<label for="email">Email:</label>
				<input id="email" class="form-control" type="email" name="email" required>
			</div>
			<div class="form-group">
				<label for="password">Senha:</label>
				<input id="password" class="form-control" type="password" name="password" placeholder="Digite sua senha" required>
			</div>
			<div class="form-group">
				<input id="password" class="form-control" type="password" name="password2" placeholder="Digite novamente a senha" required>
			</div>
			<div class="form-group">
				<input class="btn btn-md btn-primary btn-block" type="submit" value="Registrar">
			</div>
		</form>
		<p class ="float-left"><a href="/login">Clique aqui</a> para entrar</p>
	</div>
</div>

<% include partials/footer %>